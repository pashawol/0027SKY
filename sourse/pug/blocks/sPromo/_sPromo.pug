mixin sPromo()
	// start sPromo
	+b.SECTION.sPromo.section#sPromo&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Рекламные материалы
				p Зарегистрируйтесь в&nbsp;SKY CRYPTO, чтобы получить персональную реферальную ссылку.
			+form-wrap
				.row
					.col-sm-6
						+b.custom-select-wrap
							mixin option(p)
								option(value= p )&attributes(attributes)= p
							select.custom-select-js.form-control 
								+option("970х90 ") 
								+option("Беларусь") 
								+option("Украина") 
					.col-sm-6
						button.btn.btn-primary.btn-block(type="submit" ) Скачать
			+pic("promo.png")(class="text-center")
			+e.btn.btn-warning.btn-block(type="submit" ) Зарегистрироваться
	// end sPromo